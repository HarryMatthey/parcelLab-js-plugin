{{#[helpers/equals] type "pickup-location"}}
  <!-- Map -->
  {{#if address}}
    <div class="pl-box" style="margin-bottom:25px;">
      <div class="pl-box-body" style="padding:0;">
        <div id="pl-pickup-location-map"></div>
      </div>
      <!-- {{[generate/PickupLocationMap] address }} -->

      <div class="pl-box-footer" align="left" style="padding:10px 20px;">
        <a href="{{[generate/MapsLink] address}}" title="{{address}}" target="_blank">
          <div class="pl-box-action-info">
            {{address}}
            <i class="fa fa-road"></i>
          </div>
        </a>
      </div>

      <div class="pl-box-body" style="padding:0;">
        <!-- Opening hours -->
        {{#if openingHours}}
          {{{ [generate/OpeningHours] openingHours lang.code}}}
        {{/if}}
      </div>
    </div>
  {{/if}}
{{/[helpers/equals]}}


  {{#[helpers/equals] type "vote-courier"}}
  <div class="pl-box" style="margin-bottom:25px;">
    <div class="pl-box-body" style="padding: 15px;">
      {{#if label}}<h3 style="text-align:center;">{{label}}</h3>{{/if}}
      <div class="rating-body">
          <div class="pl-courier-vote up" data-vote="up">
            <i class="fa fa-thumbs-o-up"></i>
          </div>
          <div class="pl-courier-vote down" data-vote="down">
            <i class="fa fa-thumbs-o-down"></i>
          </div>
      </div>
    </div>
  </div>
  {{/[helpers/equals]}}

  {{#[helpers/equals] type "prediction"}}
    <div class="pl-box" style="margin-bottom: 10px;">
      {{#if label}}
        <div class="pl-box-heading pl-box-cal-heading">
          <h3 style="text-align:center;">{{label}}</h3>
        </div>
      {{/if}}

    {{#if dayOfWeek}}
        <div class="pl-box-body pl-box-cal-body pl-box-prediction">
            <div class="pl-cal-week-day">{{dayOfWeek}}</div>
            <div class="pl-cal-day">{{dateOfMonth}}</div>
            <div class="pl-cal-month">{{month}}</div>
        </div>
      {{/if}}
    </div>

    {{#if startTime}}
      <div class="pl-box pl-box-time" style="margin-bottom: 10px;">
        <div class="pl-box-body">
          <div class="pl-time-data">
            <i class="fa fa-clock-o"></i> {{startTime}} {{#if endTime}}- {{endTime}}{{/if}}
          </div>
          {{#with timeCaption}}
            <small class="pl-time-caption">{{this}}</small>
          {{/with}}
        </div>
      </div>
    {{/if}}

    {{#if startTime}}
      {{#if endTime}}
        {{#if deliveryLocation}}
          <div class="pl-box pl-box-time" style="margin-bottom: 10px;">
            <div class="pl-box-body">
              <div id="pl-prediction-map"></div>
            </div>
          </div>
          {{[generate/DeliveriesMap] startTime endTime deliveryLocation nearbyDeliveries}}
        {{/if}}
      {{/if}}
    {{/if}}

    {{#with caption}}
      <div class="pl-prediction-caption" style="margin-bottom:25px;">
        <i class="fa fa-info"></i> &nbsp; {{this}}
      </small>
    {{/with}}
  {{/[helpers/equals]}}
