<div class="pl-col pl-col-{{template.size}}" style="padding:10px;" >
  <div class="pl-tab pl-btn pl-btn-default pl-{{template.active}}" href="pl-t-{{template.href}}">
    <input type="hidden" class="objectHolder" value="{{template.object}}">
    <div class="pl-tab-content">
      <div class="pl-tab-text">
        <span class="pl-tab-text-tno">
          {{courier.prettyname}} &nbsp;
          {{tracking_number}}
        </span>
        <br />
        <span class="pl-tab-text-status">
          {{last_delivery_status.status}}
        </span>
      </div>
      
      <div class="pl-status">
        <div class="pl-icon">
          <span class="fa-stack fa-lg">
            {{#if template.transitStatus.color}}
              <i class="fa fa-circle fa-stack-2x" style="opacity:.2; color: {{template.transitStatus.color}}"></i>
            {{else}}
              <i class="fa fa-circle fa-stack-2x" style="opacity:.4;"></i>
            {{/if}}
            <i class="fa fa-{{template.transitStatus.icon}} fa-stack-1x" style="color:{{template.transitStatus.color}}"></i>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
